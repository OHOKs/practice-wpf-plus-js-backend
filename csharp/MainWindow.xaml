<Window x:Class="Teszt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Teszt"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="500"
        Closing="Window_Closing">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button Content="Hozzáadás" Grid.Row="0" HorizontalAlignment="Center" Margin="0,10,0,10" Click="Button_Click"/>

        <DataGrid x:Name="IngatlanDataGrid" Grid.Row="1" AutoGenerateColumns="True" 
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0"/>
    </Grid>
</Window>
